[mergealias "myvim"]
   cmd = "vim -d -R -f \
      -c \"tabe $MERGED\" -c \"set noro\" -c \"vert diffs $LOCAL\" \
      -c \"tabe $REMOTE\" -c \"vert diffs $BASE\" \
      -c tabfir -c \"diffs $MERGED\" -c \"set noro\" -c \"wincmd J\" \
      \"$LOCAL\" \"$BASE\" \"$REMOTE\""

